{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}

    <table class="table table-dark">
        <thead>
            <tr>
                <th colspan="4"> <h2 class="text-md-center">Mes Annonces en Ligne </h2></th>

            </tr>
        </thead>
        <tbody>



            {% for annonce in app.user.annonces %}
            <td colspan="2"> <h6>AnnAonce publié le: </h6></td><td>{{ annonce.dateEnregistrement|date("d/m/Y") }}</td>
            <tr><td colspan="2"><h6>Intitulé Annonce<h6></td> <td>{{ annonce.titre }}</td></tr>
            <tr><td colspan="2"><h6>Description</h6></td> <td>{{ annonce.descriptionCourte }}</td></tr>
            <tr>
                <td class="align-middle"><h6>Photo</h6></td>
                <td><img class="img-thumbnail" src="{{ asset("images/" ~ annonce.photo.photo1) }}"></td>
                <td><img class="img-thumbnail" src="{{ asset("images/" ~ annonce.photo.photo2) }}"></td>
                <td><img class="img-thumbnail" src="{{ asset("images/" ~ annonce.photo.photo3) }}"></td>
                <td><img class="img-thumbnail" src="{{ asset("images/" ~ annonce.photo.photo4) }}"></td>
                <td><img class="img-thumbnail" src="{{ asset("images/" ~ annonce.photo.photo5) }}"></td>
            </tr>
            <tr>
                <td><h6>Prix</h6></td>
                <td>{{ annonce.prix }}</td>
            </tr>
            <tr>
                <td><h6>Ville</h6></td>
                <td>{{ annonce.adresse }}</td>
            </tr>
        {% endfor %}


    </tbody>
</table>



{#    <a href="{{ path('profil_modifier') }}">Modifier</a>#}

{% endblock %}
